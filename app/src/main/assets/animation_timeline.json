{
    "animation_timeline": {
        "app_launch": {
            "total_duration": 1500,
            "sequence": [
                {
                    "time": 0,
                    "event": "show_background",
                    "animation": "instant_fade_in"
                },
                {
                    "time": 100,
                    "event": "show_date_number",
                    "animation": "fade_scale_in",
                    "duration": 600
                },
                {
                    "time": 200,
                    "event": "show_month_year",
                    "animation": "slide_fade_in_left",
                    "duration": 500
                },
                {
                    "time": 250,
                    "event": "show_day_of_week",
                    "animation": "slide_fade_in_right",
                    "duration": 500
                },
                {
                    "time": 400,
                    "event": "show_week_headers",
                    "animation": "stagger_fade_in",
                    "duration": 300
                },
                {
                    "time": 600,
                    "event": "show_dot_grid",
                    "animation": "stagger_scale_in",
                    "duration": 800
                },
                {
                    "time": 1400,
                    "event": "pulse_current_day",
                    "animation": "pulse_current_day",
                    "duration": 800
                }
            ]
        },
        "midnight_auto_update": {
            "total_duration": 2000,
            "trigger": "time_equals_00:00",
            "sequence": [
                {
                    "time": 0,
                    "event": "pause_breathing_animation"
                },
                {
                    "time": 100,
                    "event": "fade_old_current_day",
                    "duration": 300
                },
                {
                    "time": 300,
                    "event": "flip_date_number",
                    "animation": "flip_number",
                    "duration": 600
                },
                {
                    "time": 700,
                    "event": "highlight_new_current_day",
                    "animation": "pulse_current_day",
                    "duration": 800
                },
                {
                    "time": 750,
                    "event": "ripple_from_current_day",
                    "duration": 1000
                },
                {
                    "time": 1500,
                    "event": "resume_breathing_animation"
                }
            ]
        },
        "month_change": {
            "total_duration": 750,
            "trigger": "swipe_or_navigation",
            "sequence": [
                {
                    "time": 0,
                    "event": "exit_current_month",
                    "animation": "cascade_transition",
                    "duration": 200
                },
                {
                    "time": 100,
                    "event": "update_month_label",
                    "animation": "flip_number",
                    "duration": 400
                },
                {
                    "time": 300,
                    "event": "enter_new_month",
                    "animation": "cascade_transition",
                    "duration": 450
                }
            ]
        }
    },
    "easing_functions": {
        "ease_in": "cubic_bezier(0.42, 0, 1.0, 1.0)",
        "ease_out": "cubic_bezier(0, 0, 0.58, 1.0)",
        "ease_in_out": "cubic_bezier(0.42, 0, 0.58, 1.0)",
        "ease_out_cubic": "cubic_bezier(0.33, 1, 0.68, 1)",
        "ease_in_out_cubic": "cubic_bezier(0.65, 0, 0.35, 1)",
        "elastic_out": "cubic_bezier(0.34, 1.56, 0.64, 1)",
        "bounce_out": "cubic_bezier(0.34, 1.61, 0.7, 1)",
        "material_standard": "cubic_bezier(0.4, 0.0, 0.2, 1)",
        "material_decelerate": "cubic_bezier(0.0, 0.0, 0.2, 1)",
        "material_accelerate": "cubic_bezier(0.4, 0.0, 1, 1)",
        "ios_spring": "cubic_bezier(0.17, 0.89, 0.32, 1.28)"
    }
}