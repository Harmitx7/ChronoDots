<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_md">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="@string/cancel"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_editor"
                android:textAppearance="@style/TextAppearance.DotMatrix.Title"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                style="@style/Widget.DotMatrix.Button.Primary" />

        </LinearLayout>

        <!-- Live Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/preview_height"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:contentDescription="@string/widget_editor" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Widget Type Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget Type"
            android:textAppearance="@style/TextAppearance.DotMatrix.Label"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/widget_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_type_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_year_name"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_type_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_month_name"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_type_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_progress_name"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Appearance Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/appearance"
                    android:textAppearance="@style/TextAppearance.DotMatrix.Title"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Theme Selector -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme"
                        android:textAppearance="@style/TextAppearance.DotMatrix.Body"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic Light"
                        style="@style/Widget.DotMatrix.Button.Secondary" />

                </LinearLayout>

                <!-- Dot Size Slider -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot_size"
                    android:textAppearance="@style/TextAppearance.DotMatrix.Label"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_dot_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="2"
                    android:valueTo="8"
                    android:value="4"
                    android:stepSize="0.5"
                    style="@style/Widget.DotMatrix.Slider" />

                <!-- Dot Spacing Slider -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dot_spacing"
                    android:textAppearance="@style/TextAppearance.DotMatrix.Label"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_dot_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1"
                    android:valueTo="6"
                    android:value="2"
                    android:stepSize="0.5"
                    style="@style/Widget.DotMatrix.Slider" />

                <!-- Opacity Slider -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opacity"
                    android:textAppearance="@style/TextAppearance.DotMatrix.Label"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_opacity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.3"
                    android:valueTo="1.0"
                    android:value="0.8"
                    android:stepSize="0.1"
                    style="@style/Widget.DotMatrix.Slider" />

                <!-- Shape Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shape"
                    android:textAppearance="@style/TextAppearance.DotMatrix.Label"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/spacing_sm" />

                <RadioGroup
                    android:id="@+id/shape_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_circle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/circle"
                        android:textColor="@color/text_primary"
                        android:checked="true" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_square"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/square"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radio_rounded"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rounded_square"
                        android:textColor="@color/text_primary" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Emoji Rules Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/emoji_rules"
                        android:textAppearance="@style/TextAppearance.DotMatrix.Title"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/rules_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 3"
                        android:textAppearance="@style/TextAppearance.DotMatrix.Label"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="@string/add_rule"
                    style="@style/Widget.DotMatrix.Button.Secondary" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rules_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
